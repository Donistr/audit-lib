<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProperty scope="context" name="auditlog.enabled" source="auditlog.enabled" defaultValue="false"/>
    <springProperty scope="context" name="auditlog.console-enabled" source="auditlog.console-enabled" defaultValue="true"/>
    <springProperty scope="context" name="auditlog.file-enabled" source="auditlog.file-enabled" defaultValue="false"/>
    <springProperty scope="context" name="auditlog.file-path" source="auditlog.file-path" defaultValue="logs/auditlog"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{15}) - %msg%n</pattern>
        </encoder>
    </appender>

    <if condition='property("auditlog.enabled").equals("true")'>
        <then>
            <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
                <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                    <fileNamePattern>${auditlog.file-path}.%d{yyyy-MM-dd}.log</fileNamePattern>
                    <maxHistory>30</maxHistory>
                </rollingPolicy>
                <encoder>
                    <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
                </encoder>
            </appender>

            <logger name="org.example.auditlib.AuditLogAspect" additivity="false">
                <if condition='property("auditlog.console-enabled").equals("true")'>
                    <then>
                        <appender-ref ref="CONSOLE" />
                    </then>
                </if>
                <if condition='property("auditlog.file-enabled").equals("true")'>
                    <then>
                        <appender-ref ref="FILE" />
                    </then>
                </if>
            </logger>
        </then>
    </if>
    <if condition='property("auditlog.enabled").equals("false")'>
        <then>
            <logger name="org.example.auditlib.AuditLogAspect" additivity="false"/>
        </then>
    </if>

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
